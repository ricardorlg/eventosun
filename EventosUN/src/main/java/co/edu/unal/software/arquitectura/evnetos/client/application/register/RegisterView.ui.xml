<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client"
	xmlns:form="urn:import:com.sencha.gxt.widget.core.client.form"
	xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container"
	xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button">

	<ui:with
		type="co.edu.unal.software.arquitectura.evnetos.client.resources.Resources"
		field="images" />


	<ui:with type="com.sencha.gxt.widget.core.client.form.NumberPropertyEditor"
		field="integerPropertyEditor" />
	<ui:with type="com.google.gwt.i18n.client.NumberFormat" field="numberFormat" />
	<ui:with
		type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData"
		field="verticalLayoutData">
		<ui:attributes width="1" height="-1" />

	</ui:with>

	<gxt:Window ui:field="dialog" buttonAlign="END" resizable="false"
		modal="false" minHeight="231" autoHide="true" onEsc="true">
		<gxt:FramedPanel headerVisible="false">
			<form:FieldSet ui:field="fieldSet" headingText="Registro de Usuario"
				collapsible="false">
				<container:VerticalLayoutContainer>
					<container:child layoutData="{verticalLayoutData}">
						<form:FieldLabel text="Nombres">
							<form:widget>
								<form:TextField ui:field="nombres" allowBlank="false"
									autoValidate="true" emptyText="Ingresa tus nombres" />
							</form:widget>
						</form:FieldLabel>
					</container:child>
					<container:child layoutData="{verticalLayoutData}">
						<form:FieldLabel text="Apellidos">
							<form:widget>
								<form:TextField ui:field="apellidos" allowBlank="false"
									autoValidate="true" emptyText="Ingresa tus Apellidos" />
							</form:widget>
						</form:FieldLabel>
					</container:child>
					<container:child layoutData="{verticalLayoutData}">
						<form:FieldLabel text="email">
							<form:widget>
								<form:TextField ui:field="email" allowBlank="false"
									autoValidate="true" emptyText="Ingresa tu Correo" />
							</form:widget>
						</form:FieldLabel>
					</container:child>
					<container:child layoutData="{verticalLayoutData}">
						<form:FieldLabel text="telefono">
							<form:widget>
								<form:NumberField ui:field="telefono"
									allowBlank="true" editor="{integerPropertyEditor}" format="{numberFormat}"
									allowDecimals=" false " allowNegative="false" emptyText="Ingresa tu telefono" />
							</form:widget>
						</form:FieldLabel>
					</container:child>
					<container:child layoutData="{verticalLayoutData}">
						<form:FieldLabel text="username">
							<form:widget>
								<form:TextField ui:field="username" allowBlank="false"
									autoValidate="true" emptyText="Ingresa tu usuario" />
							</form:widget>
						</form:FieldLabel>
					</container:child>
					<container:child layoutData="{verticalLayoutData}">
						<form:FieldLabel text="password">
							<form:widget>
								<form:PasswordField ui:field="password"
									allowBlank="false" autoValidate="true" emptyText="Ingresa tu clave" />
							</form:widget>
						</form:FieldLabel>
					</container:child>
				</container:VerticalLayoutContainer>
			</form:FieldSet>
		</gxt:FramedPanel>
		<gxt:button>
			<button:TextButton text="Registrar" ui:field="registrar"
				icon="{images.accept}" />
		</gxt:button>
		<gxt:button>
			<button:TextButton text="Cancelar" ui:field="cancel"
				icon="{images.delete}" />
		</gxt:button>
	</gxt:Window>
</ui:UiBinder>
